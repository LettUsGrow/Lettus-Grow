include ./includes/pot/pot.pug
include ./includes/header.pug
include ./includes/footer.pug

doctype
html
  head
    meta(charset="UTF-8")
    title Lettus Grow
    link(rel="stylesheet", type="text/css", href="/css/main.css")
    link(rel="stylesheet", type="text/css", href="/css/stats.css")
    script(src="https://d3js.org/d3.v4.0.0-alpha.50.min.js", charset="utf-8")

    //- Combodate requires jquery and moment
    script(src="/jquery/dist/jquery.min.js")
    script(src="/moment/moment.js")
    script(src="/combodate/src/combodate.js")

    //- Roboto font
    link(href='https://fonts.googleapis.com/css?family=Roboto:500,400,500italic,300,400italic' rel='stylesheet' type='text/css')
  body
    +header()

    #flex-body-outer
      main
        each pot, j in pots
          +pot(pot, j)      
      nav
      aside

    +footer()

    script(src="js/main.js")
    script(src="js/stats.js")